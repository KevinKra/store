<!DOCTYPE html>
<html>
  <head>
    <title>SoloShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <nav class="main-nav" id="primary-navigation">
      <%= link_to 'Home', "/" %>
      <%= link_to 'All Items', "/items" %>
      <%= link_to 'Merchants', "/merchants" %>
      <%= link_to 'Cart: 0', "/cart" %>
      <% if current_user %>
        <%= link_to 'Logout', "/logout" %>
      <% else %>
        <%= link_to 'Login', "/login" %>
        <%= link_to 'Register', "/register" %>
      <% end %>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash" id="main-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
